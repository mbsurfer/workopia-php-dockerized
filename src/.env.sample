# .env

# Application
APP_PORT=8000

# Database Connection Details
# These will be used by both the 'db' service for MySQL setup
# and the 'php' service for its environment variables.
DB_HOST=db
DB_PORT=3306
DB_DATABASE=workopia
DB_USERNAME=workopia_user
DB_PASSWORD=yoursecretpassword # Change this to a strong password
DB_ROOT_PASSWORD=yourrootsecretpassword # Change this to a strong password

# Port on your host machine to forward to the DB container's port 3306
# Useful for connecting with a GUI tool from your host.
FORWARD_DB_PORT=3307